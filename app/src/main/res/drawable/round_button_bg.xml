<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- État quand le bouton est pressé -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#4080D0FF" /> <!-- Bleu néon semi-transparent -->
            <stroke android:width="2dp" android:color="#FFFFFF" />
        </shape>
    </item>
    <!-- État par défaut -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#40000000" /> <!-- Noir très transparent -->
            <stroke android:width="1dp" android:color="#80D0FF" /> <!-- Bordure bleu néon -->
        </shape>
    </item>
</selector> 