<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Ombre portÃ©e pour donner de la profondeur -->
    <item android:top="2dp" android:left="1dp">
        <shape android:shape="oval">
            <solid android:color="#40000000" />
            <size android:width="22dp" android:height="22dp"/>
        </shape>
    </item>

    <!-- Corps principal du joyau -->
    <item android:bottom="2dp" android:right="1dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="10dp"
                android:startColor="#FFD49DFF"
                android:endColor="#FF5C007A" />
            <stroke android:width="2dp" android:color="#CCFFFFFF" />
            <size android:width="24dp" android:height="24dp"/>
        </shape>
    </item>

    <!-- Reflet pour un effet brillant -->
    <item android:bottom="10dp" android:right="5dp" android:top="5dp" android:left="10dp">
        <shape android:shape="oval">
            <solid android:color="#80FFFFFF" />
        </shape>
    </item>
</layer-list> 